<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pastelGreen_900"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bgStarIcon"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:rotation="22.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/icon_octagram"
        app:tint="@color/pastelGreen_700" />

    <LinearLayout
        android:id="@+id/splashLogoLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <ImageView
            android:id="@+id/splashLogoIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:transitionName="logoIcon"
            app:srcCompat="@drawable/islamic_logo" />

        <ImageView
            android:id="@+id/splashLogoTextIcon"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:transitionName="logoText"
            app:srcCompat="@drawable/isoc_logo_text" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>